/**app.wxss**/

.container {
  height: 1100rpx;
  background: url("https://64078752.jinjinyoga.net/static/yoga.png");
  background-size: cover;
  background-repeat: no-repeat;
}

.main {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  box-sizing: border-box;
  height: 100%;
  justify-content: space-between;
}

.home-icon {
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
  vertical-align: bottom;
}

.address-content {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.address-item {
  margin-bottom: 20rpx;
  width: 95%;
  color: ivory;
  background: rgba(230,180,117,  0.3);
  padding: 20rpx 5rpx 20rpx 5rpx;
  border-radius: 5rpx;
}

.usermotto {
  margin-top: 200px;
}

.message-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: stretch;
  text-shadow: 3px 2px #404040;
  color: white;
}

.message-item{
  margin-bottom: 15rpx;
}

.times-number {
  display: inline;
  color: red;
  background: linear-gradient(#e6b475, #ffffff);
  font-size: 150%;
  border-radius: 50%;
}
