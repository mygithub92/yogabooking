/**app.wxss**/
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  box-sizing: border-box;
  background-image: url("./yoga3.jpg")
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.home-icon{
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
  vertical-align: bottom;
}

.address-item {
  padding:30rpx 20rpx 30rpx 20rpx;
  background:linear-gradient(#b3d9ff,#cce6ff,#e6f2ff);
  border-radius: 1px;
  border:1px cornflowerblue solid;
  width: 98%;
}

.usermotto {
  margin-top: 200px;
}